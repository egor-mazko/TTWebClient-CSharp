                        <Expander Grid.Row="6" Header="Assets">
                            <Grid IsEnabled="{Binding Path=ClientView.IsAccountCash}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <Button Content="GET" Command="{Binding Path=ClientView.AssetsCommand}"/>
                                    <Label Content="Asset Currency:"/>
                                    <TextBox Text="{Binding Path=ClientView.AssetCurrency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <ListView Grid.Row="1" ItemsSource="{Binding Path=ClientView.Assets}">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.Columns>
                                                <GridViewColumn Header="Currency" DisplayMemberBinding="{Binding Path=Currency}"/>
                                                <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Path=Amount}"/>
                                            </GridView.Columns>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Expander>
                        <Expander Grid.Row="7" Header="Positions">
                            <Grid IsEnabled="{Binding Path=ClientView.IsAccountNet}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <Button Content="GET" Command="{Binding Path=ClientView.PositionsCommand}"/>
                                    <Label Content="Position Id:"/>
